<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/historyCardHeader"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    android:layoutDirection="ltr">

    <TextView
        android:id="@+id/tv_budget_card_header_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layoutDirection="ltr"
        android:text="Date" />

    <TextView
        android:id="@+id/tv_budget_card_header_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layoutDirection="ltr"
        android:text="Name" />

    <TextView
        android:id="@+id/tv_budget_card_header_period"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layoutDirection="ltr"
        android:text="Period" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/budget_card_values"
        android:layout_below="@id/tv_budget_card_header_date"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:layoutDirection="ltr"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_budget_card_header_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layoutDirection="ltr"
            android:text="Value" />
        <TextView
            android:id="@+id/tv_budget_card_header_threshold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layoutDirection="ltr"
            android:text="Thershold" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/budget_card_content_wrapper"
        android:layout_below="@id/budget_card_values">

    </LinearLayout>
</RelativeLayout>