<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="budget.Budget"
    android:scrollbars="none">

    <LinearLayout
        android:id="@+id/budget_popup_anchor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layoutDirection="ltr">

        <it.gmariotti.cardslib.library.recyclerview.view.CardRecyclerView
            android:id="@+id/budget_card_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="ltr"
            android:paddingEnd="8dp"

            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingStart="8dp"
            android:scrollbars="none"

            card:list_card_layout_resourceID="@layout/native_recyclerview_card_layout" />

        <TextView
            android:id="@+id/emptyBudget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableTop="@drawable/empty_64dp"
            android:layoutDirection="ltr"
            android:text="@string/budget_is_empty"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:visibility="gone" />


        <Button
            android:id="@+id/btn_create_budget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/transparent"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="@color/colorAccent"
            android:paddingEnd="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingStart="16dp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:text="@string/create_budget" />

    </LinearLayout>

</ScrollView>