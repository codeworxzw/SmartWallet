                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="000 USD"
                        android:textAppearance="?android:attr/textAppearanceLarge"

                        android:textColor="@color/expense" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/food_layout"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/food_background"
                    android:paddingBottom="2dp"
                    android:paddingLeft="8dp"
                    android:paddingStart="8dp">

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        android:text="@string/food"
                        android:textColor="@android:color/tertiary_text_dark"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_expense_food"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="000"
                        android:textColor="@android:color/tertiary_text_dark"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/car_payment_layout"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/car_payment_background"
                    android:paddingBottom="2dp"
                    android:paddingLeft="8dp"
                    android:paddingStart="8dp">

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        android:text="@string/car_payment"
                        android:textColor="@android:color/tertiary_text_dark"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_expense_car_payment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="000"
                        android:textColor="@android:color/tertiary_text_dark"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/personal_layout"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/personal_background"
                    android:paddingBottom="2dp"
                    android:paddingLeft="8dp"
                    android:paddingStart="8dp">

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        android:text="@string/personal"
                        android:textColor="@android:color/tertiary_text_dark"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_expense_personal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="000"
                        android:textColor="@android:color/tertiary_text_dark"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/activities_layout"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/activities_background"
                    android:paddingBottom="2dp"
                    android:paddingLeft="8dp"
                    android:paddingStart="8dp">

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        android:text="@string/activities"
                        android:textColor="@android:color/tertiary_text_dark"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_expense_activities"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="000"
                        android:textColor="@android:color/tertiary_text_dark"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/utilities_layout"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/utilities_background"
                    android:paddingBottom="2dp"
                    android:paddingLeft="8dp"
                    android:paddingStart="8dp">

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        android:text="@string/utilities"
                        android:textColor="@android:color/tertiary_text_dark"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_expense_utilities"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="000"
                        android:textColor="@android:color/tertiary_text_dark"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/credit_card_layout"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/credit_card_background"
                    android:paddingBottom="2dp"
                    android:paddingLeft="8dp"
                    android:paddingStart="8dp">

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        android:text="@string/credit_card"
                        android:textColor="@android:color/tertiary_text_dark"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_expense_credit_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="000"
                        android:textColor="@android:color/tertiary_text_dark"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/taxes_layout"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/taxes_background"
                    android:paddingBottom="2dp"
                    android:paddingLeft="8dp"
                    android:paddingStart="8dp">

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        android:text="@string/taxes"
                        android:textColor="@android:color/tertiary_text_dark"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_expense_taxes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="000"
                        android:textColor="@android:color/tertiary_text_dark"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/mortgage_layout"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/mortgage_background"
                    android:paddingBottom="2dp"
                    android:paddingLeft="8dp"
                    android:paddingStart="8dp">

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        android:text="@string/mortgage"
                        android:textColor="@android:color/tertiary_text_dark"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_expense_mortgage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="000"
                        android:textColor="@android:color/tertiary_text_dark"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/other_expenses_layout"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/other_expenses_background"
                    android:paddingBottom="2dp"
                    android:paddingLeft="8dp"
                    android:paddingStart="8dp">

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        android:text="@string/other_expense"
                        android:textColor="@android:color/tertiary_text_dark"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_expense_other"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="000"
                        android:textColor="@android:color/tertiary_text_dark"
                        android:textSize="16sp" />
